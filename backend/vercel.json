{
    "version": 2,
    "builds": [
      {
        "src": "backend/api/index.js",
        "use": "@vercel/node",
        "config": { "includeFiles": ["backend/**"] }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/api/index.js"
      }
    ],
    "installCommand": "npm install --prefix backend",
    "env": {
      "SMTP_USER": "@smtp_user",
      "SMTP_PASS": "@smtp_pass"
    }
  }
  